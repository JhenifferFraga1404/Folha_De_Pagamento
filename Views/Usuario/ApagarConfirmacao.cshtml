@model UsuarioModel
@{
    ViewData["Title"] = "Confirmação apagar o usuário";
    }

    <div class="text-center">
        <h3>Realmente deseja apagar o usuário (@Model.Nome)?</h3>
    </div>

<a class="btn btn-primary w-100" asp-controller="Usuario" role="button" asp-action="Index">Cancelar exclusão</a>
<a class="btn btn-danger w-100" asp-controller="Usuario" asp-route-id="@Model.Id" role="button" asp-action="Apagar">Confirmar exclusão</a>

