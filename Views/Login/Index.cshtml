@model LoginModel
@{
	Layout = "_LayoutDeslogado";
	ViewData["Title"] = "Login";

}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>
}

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["MensagemSucesso"]
    </div>
}

<form asp-controller="Login" asp-action="Entrar" method="post">
    <div class="form-group">
        <div class="row">
            <div class="col-md-4">
            </div>
            <div class="col-md-4">
                <label for="login">Login</label>
                <input type="text" asp-for="Login" class="form-control" id="login">
                @Html.ValidationMessageFor(x => x.Login)
            </div>
            <div class="col-md-4">
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class='row'>
            <div class="col-md-4">
            </div>
            <div class="col-md-4">
                <label for="senha">Senha</label>
                <input type="password" asp-for="Senha" class="form-control" id="senha">
                @Html.ValidationMessageFor(x => x.Senha)
            </div>
            <div class="col-md-4">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
        </div>
       

        <div class="col-md-4 mx-auto">
            <p>

                Esqueceu sua senha?
                <a asp-action="RedefinirSenha" asp-controller="Login" class="text-primary text-gradient font-weight-bold">Redefinir minha senha</a>
            </p>
            <button type="submit" class="btn btn-primary w-100 mt-3">Entrar</button>
        </div>
        <div class="col-md-4">
        </div>
    </div>
</form>