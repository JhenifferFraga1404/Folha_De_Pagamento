@model ContatoModel
@{
    ViewData["Title"] = "Confirmação apagar o funcionário";
    }

    <div class="text-center">
        <h3>Realmente deseja apagar o funcionário (@Model.Nome)?</h3>
    </div>

<a class="btn btn-primary w-100" asp-controller="Contato" role="button" asp-action="Index">Cancelar exclusão</a>
<a class="btn btn-danger w-100" asp-controller="Contato" asp-route-id="@Model.Id" role="button" asp-action="Apagar">Confirmar exclusão</a>

